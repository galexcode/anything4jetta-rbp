#tag ClassProtected Class FireCanvasInherits Canvas	#tag Event		Sub Paint(g As Graphics)		  if mPic = nil then		    Init		  end if		  g.DrawPicture mPic,0,0,width,height, 0,0,mWidth,mHeight		  		End Sub	#tag EndEvent	#tag Method, Flags = &h0		Sub Init()		  Dim x,y,heat As Integer		  		  if mPic = nil then		    if mPixelSize < 1 then		      mPixelSize = 3		    end if		    mWidth = me.width / mPixelSize		    mHeight = me.height / mPixelSize		    Redim mTemp(mWidth,mHeight)		    mPic = NewPicture(mWidth,mHeight,32)		    		    y = mHeight-1		    heat = 50		    for x = mWidth-1 downTo 0		      mTemp(x,y) = heat		      heat = heat + Round(Rnd*30.0-15.0)		      heat = max(0,min(heat,100))		    next		    		    for heat = 0 to 100		      mPalette(heat) = RGB(heat*2.5, heat*2, 0)		    next		  end if		  		End Sub	#tag EndMethod	#tag Method, Flags = &h0		Sub Update()		  Dim x,y, heat As Integer		  Dim surf As RGBSurface		  		  surf = mPic.rgbSurface		  for y = 0 to mHeight-2		    for x = mWidth-2 downTo 1		      mTemp(x,y) = (mTemp(x-1,y+1) + mTemp(x,y+1) + mTemp(x+1,y+1))*0.3		      surf.Pixel(x,y) = mPalette(mTemp(x,y))		    next		  next		  y = mHeight-1		  for x = mWidth-2 downTo 1		    heat = (mTemp(x-1,y) + mTemp(x,y) + mTemp(x+1,y))/3 + Rnd*20-9		    heat = max(0,min(heat,100))		    mTemp(x,y) = heat		    surf.Pixel(x,y) = mPalette(heat)		  next		  		  me.graphics.DrawPicture mPic,0,0,width,height, 0,0,mWidth,mHeight		  		End Sub	#tag EndMethod	#tag Property, Flags = &h0		mHeight As Integer// data height	#tag EndProperty	#tag Property, Flags = &h0		mPalette(100) As Color	#tag EndProperty	#tag Property, Flags = &h0		mPic As Picture	#tag EndProperty	#tag Property, Flags = &h0		mPixelSize As Integer	#tag EndProperty	#tag Property, Flags = &h0		mTemp(0,0) As Integer	#tag EndProperty	#tag Property, Flags = &h0		mWidth As Integer// data width	#tag EndProperty	#tag ViewBehavior		#tag V